{% extends 'base.html.twig' %}

{% block title %}Formulaire de modification des informations personnel
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Formulaire de modification des informations personnel</h1>

		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{{ form_errors(form) }}

		{{ form_start(form) }}

		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					{{ form_label(form.nom) }}
					{{ form_widget(form.nom) }}
					<div class="form-error">
						{{ form_errors(form.nom) }}
					</div>
				</div>
				<div class="form-group">
					<img src="{{ vich_uploader_asset(user, 'imageFile') }}" alt="logo">
					{{ form_label(form.imageFile) }}
					{{ form_widget(form.imageFile) }}
					<div class="form-error">
						{{ form_errors(form.imageFile) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.adresse) }}
					{{ form_widget(form.adresse) }}
					<div class="form-error">
						{{ form_errors(form.adresse) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.cp) }}
					{{ form_widget(form.cp) }}
					<div class="form-error">
						{{ form_errors(form.cp) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.description) }}
					{{ form_widget(form.description) }}
					<div class="form-error">
						{{ form_errors(form.description) }}
					</div>
				</div>
			</div>

			<div class="col-md-6">
				<div class="form-group">
					{{ form_label(form.ville) }}
					{{ form_widget(form.ville) }}
					<div class="form-error">
						{{ form_errors(form.ville) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.phone) }}
					{{ form_widget(form.phone) }}
					<div class="form-error">
						{{ form_errors(form.phone) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.siret) }}
					{{ form_widget(form.siret) }}
					<div class="form-error">
						{{ form_errors(form.siret) }}
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.submit) }}
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}

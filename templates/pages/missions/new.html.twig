{% extends "base.html.twig" %}

{% block title %} Création d'une mission
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">  Création d'une mission </h1>

		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.nom) }}
			{{ form_widget(form.nom) }}
			<div class="form-error">
				{{ form_errors(form.nom) }}
			</div>
		</div>
        <div class="form-group">
			{{ form_label(form.description) }}
			{{ form_widget(form.description) }}
			<div class="form-error">
				{{ form_errors(form.description) }}
			</div>
		</div>
        <div class="form-group">
			{{ form_label(form.tarif) }}
			{{ form_widget(form.tarif) }}
			<div class="form-error">
				{{ form_errors(form.tarif) }}
			</div>
		</div>
        <div class="form-group">
			{{ form_label(form.startDateAT) }}
			{{ form_widget(form.startDateAT) }}
			<div class="form-error">
				{{ form_errors(form.startDateAT) }}
			</div>
		</div>
        <div class="form-group">
			{{ form_label(form.endDateat) }}
			{{ form_widget(form.endDateat) }}
			<div class="form-error">
				{{ form_errors(form.endDateat) }}
			</div>
		</div>
        <div class="form-group">
			{{ form_label(form.duree) }}
			{{ form_widget(form.duree) }}
			<div class="form-error">
				{{ form_errors(form.duree) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_row(form._token) }}
		</div>

		
        <button class="btn btn-primary mt-4" type="submit"  >Créer la mission</button>


	</div>
	{{ form_end(form) }}
</div>{% endblock %}

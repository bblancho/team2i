{% extends 'base.html.twig' %}

{% block title %} Mes missions {% endblock %}

{% block body %}
	<div class="container mt-4">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{% if not missions.items is same as([]) %}
			<h1>Mes Missions</h1>

			<a href="{{ path('mission.new') }}" class="btn btn-primary">
				Créer une mission
			</a>

			<div class="count mt-4 mb-4">Il y a
				{{ missions.getTotalItemCount }}
				mission(s)
			</div>

			<table class="table table-striped table-bordered">
				<thead class="thead-dark">
					<tr>
						<th scope="col">Numéro</th>
						<th scope="col">Intitulé</th>
						<th scope="col">Démarrage</th>
						<th scope="col">Lieu</th>
						<th scope="col">Budget</th>
						<th scope="col">Seniorité</th>
						<th scope="col">Nb de poste(s)</th>
						<th scope="col">Durée</th>
						<th scope="col">Publié</th>
						<th scope="col" colspan="2">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for mission in missions %}
						<tr>
							<th scope="row">{{ mission.id }}</th>
							<td>{{ mission.nom }}</td>
							<td>{{ mission.startDateAT|date('d/m/Y') }}</td>
							<td>{{ mission.lieuMission }}</td>
							<td>
								{{ mission.tarif|number_format(2, '.', ',') }} €
							</td>
							<td>{{ mission.experience }} an(s) </td>
							<td>{{ mission.nbPersonnes }} </td>
							<td>{{ mission.duree }} mois </td>
							<td>{{ mission.isActive }}</td>
							<td>
								<a href="{{ path('mission.edit', { id: mission.id }) }}" class="btn btn-info">Modifier</a>
							</td>
							<td>
								<a href="{{ path('mission.delete', { id: mission.id }) }}" class="btn btn-warning">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<div class="navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(missions) }}
			</div>

		{% else %}
			<h4>Aucune missions trouvées !</h4>

			<a href="{{ path('mission.new') }}" class="btn btn-primary">
				Créer une mission
			</a>
		{% endif %}
	</div>
{% endblock %}

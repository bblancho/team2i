{% extends "admin/admin.html.twig" %}

{% block title %} Mes missions {% endblock %}

{% block body %}
	<div class="container mt-4">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{% if not missions.items is same as([]) %}
			<h1>Les Missions</h1>

			<a href="{{ path('admin.offres.create') }}" class="btn btn-primary">
				Créer une mission
			</a>

			<div class="count mt-4 mb-4"> Vous avez publié
				{{ missions.getTotalItemCount }}
				mission(s)
			</div>

			<table class="table table-striped table-bordered">
				<thead class="thead-dark">
					<tr>
						<th scope="col">Ref mission</th>
						<th scope="col">Intitulé</th>
						<th scope="col">Démarrage</th>
						<th scope="col">Lieu</th>
						<th scope="col">Budget</th>
						<th scope="col">Seniorité</th>
						<th scope="col">Durée</th>
						<th scope="col">Publié</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for mission in missions %}
						<tr>
							<th scope="row">{{ mission.refMission }}</th>
							<td>{{ mission.nom }}</td>
							<td>{{ mission.startDateAT|date('d/m/Y') }}</td>
							<td>{{ mission.lieuMission }}</td>
							<td>
								{{ mission.tarif }} €
							</td>
							<td>{{ mission.experience }} an(s) </td>
							
							<td>{{ mission.duree }} mois </td>
							<td>{{ mission.isActive ? 'oui' : 'non'}}  </td>
							<td>
								<div class="d-flex gap-1">
									<a href="{{ path('mission.show', {id: mission.id}) }}" class="btn btn-primary btn-sm"> Afficher </a>
									<a href="{{ path('admin.offres.edit', { id: mission.id }) }}" class="btn btn-info btn-sm">Modifier</a>
									<a href="{{ path('admin.offres.activer', { id: mission.id }) }}" class="btn btn-info bt btn-smn-sm">Activer</a>
									<a href="{{ path('admin.offres.desactiver', { id: mission.id }) }}" class="btn btn-info btn-sm">Désactiver</a>

									<form action="{{ path('admin.offres.delete', { id: mission.id }) }}" method="post">
										<input type="hidden" name="_method" value="DELETE">
										<button type="submit" class="btn btn-danger btn-sm"> Supprimer </button>
									</form>
								</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<div class="navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(missions) }}
			</div>

		{% else %}
			<h4>Aucune missions trouvées !</h4>

			<a href="{{ path('mission.new') }}" class="btn btn-primary">
				Créer une mission
			</a>
		{% endif %}
	</div>
{% endblock %}
